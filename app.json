{
  "expo": {
    "name": "employee-management-app",
    "slug": "employee-management-app",
    "androidStatusBar": {
      "hidden": true
    },
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/manager.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash1.png",
      "resizeMode": "contain",
      "backgroundColor": "#5893d4"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "web": {
        "favicon": "./assets/favicon.png"
      }
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": ["./assets/fonts/Inter-Black.otf"]
        }
      ]
    ]
  }
}
